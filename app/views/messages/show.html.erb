<%- model_class = Message -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sender) %>:</strong></dt>
  <dd><%= @message.sender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @message.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unique_id) %>:</strong></dt>
  <dd><%= @message.unique_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @message.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stripped_text) %>:</strong></dt>
  <dd>
    <pre><%= @message.stripped_text %></pre>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:body_plain) %>:</strong></dt>
  <dd><%= @message.body_plain %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stripped_html) %>:</strong></dt>
  <dd><%= @message.stripped_html %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body_html) %>:</strong></dt>
  <dd><%= @message.body_html %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stripped_signature) %>:</strong></dt>
  <dd><%= @message.stripped_signature %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              messages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_message_path(@message), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              message_path(@message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
