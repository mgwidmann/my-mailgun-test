<%= form_for @message, :html => { :class => "form-horizontal message" } do |f| %>

  <% if @message.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sender, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sender, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sender) %>
  </div>
  <div class="form-group">
    <%= f.label :from, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :from, :class => 'form-control' %>
    </div>
    <%=f.error_span(:from) %>
  </div>
  <div class="form-group">
    <%= f.label :subject, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subject, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subject) %>
  </div>
  <div class="form-group">
    <%= f.label :stripped_text, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :stripped_text, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stripped_text) %>
  </div>
  <div class="form-group">
    <%= f.label :body_plain, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :body_plain, :class => 'form-control' %>
    </div>
    <%=f.error_span(:body_plain) %>
  </div>
  <div class="form-group">
    <%= f.label :stripped_html, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :stripped_html, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stripped_html) %>
  </div>
  <div class="form-group">
    <%= f.label :body_html, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :body_html, :class => 'form-control' %>
    </div>
    <%=f.error_span(:body_html) %>
  </div>
  <div class="form-group">
    <%= f.label :stripped_signature, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :stripped_signature, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stripped_signature) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
